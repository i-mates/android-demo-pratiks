<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llCourseRVItem"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/tvCourseName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:shadowColor="@color/color_wet_asphalt"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="Course Name"
                android:textColor="@color/CardTitle"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/ivCourseLogo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:scaleType="centerInside"
                    android:src="@drawable/dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:weightSum="9">


                    <TextView
                        android:id="@+id/tvInstructorName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:maxLines="1"
                        android:text="Instructor Name"
                        android:textColor="@color/CardTitle"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvUnivName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:layout_gravity="top"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:hint="University Name"
                        android:paddingLeft="8dp"
                        android:shadowColor="@color/color_concrete"
                        android:shadowRadius="16"
                        android:textColor="@color/CardTitle"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>