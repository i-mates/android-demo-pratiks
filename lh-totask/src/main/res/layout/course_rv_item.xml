<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/flProdsLVItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp" >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="8dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ivProdImage"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_gravity="top"
                    android:background="@color/CardImageBG"
                    android:gravity="top"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jc_tw_multipurpose_table_1" />

                <TextView
                    android:id="@+id/tvProdPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/CardTitleBG"
                    android:gravity="center_horizontal"
                    android:padding="0dp"
                    android:text="Rs. 302000"
                    android:textColor="@color/CardTitle"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/CardTitleBG"
                    android:gravity="center_horizontal"
                    android:shadowColor="@color/color_concrete"
                    android:shadowRadius="16"
                    android:text="Product Title"
                    android:textColor="@color/CardTitle"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_red"
                android:onClick="onAddToCARTButtonClickedTask"
                android:padding="8dp"
                android:text="View"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>