<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff019ff"
    android:measureWithLargestChild="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    android:weightSum="1"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.43"
        android:background="#ff9800ff"
        android:src="@drawable/imates"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#ffff7200"
        android:gravity="center_horizontal"
        android:text="Learning App"
        android:textColor="#ff9600ff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/textview1"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/std"/>

    <Button
        android:id="@+id/btn1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:background="#ffff8a00"
        android:text="Proceed>>"
        android:textColor="#ff6900ff"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ff9600ff"
        android:text="Exit"
        android:textColor="#ff00c2ff"
        android:textSize="30dp"
        android:textStyle="bold"/>

</LinearLayout>
