<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:id="@+id/">

    <TextView
        android:text="Date and time Picker"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/dateAndTime"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the time"
        android:id="@+id/timebtn"
        android:textSize="20dp"
        android:layout_below="@+id/Datebtn"
        android:layout_alignLeft="@+id/Datebtn"
        android:layout_alignStart="@+id/Datebtn"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the date"
        android:id="@+id/Datebtn"
        android:layout_marginTop="37dp"
        android:textSize="20dp"
        android:layout_below="@+id/dateAndTime"
        android:layout_centerHorizontal="true"/>
    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/analogClock"
        android:layout_below="@+id/timebtn"
        android:layout_centerHorizontal="true"/>
    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/analogClock"/>

</RelativeLayout>
